#:kivy 2.1.0

<MainLayout>:
    BoxLayout:
        orientation::
        orientation: "vertical"
        size: root.width, root.height
        padding: 10

        Label:
            id: screen
            text: root.screenText
            color: root.screenColor
            size_hint: None, None
            size: 200, 50
            halign: 'left'

        Button:
            text: 'C'
            size_hint: None, None
            size: 200, 50
            border_radius: [10]
            background_color: (1,0,0,1)
            on_release: root.tulis('C')

